{
    "manifest_version": 2,
    "name": "iCheques",
    "version": "0.1",
    "description": "Extens√£o para adicionar cheques na plataforma iCheques",
    "icons": {
        "16": "images/icheques-chrome/icons/16.png",
        "48": "images/icheques-chrome/icons/48.png",
        "128": "images/icheques-chrome/icons/128.png"
    },
    "browser_action": {
        "default_icon": "images/icheques-chrome/icons/19.png"
    },
    "author": "Lucas Fernando Vasconcelos de Arruda Amorim <lf.amorim@bipbop.com.br>",
    "externally_connectable": {
        "matches": ["*://*.icheques.com.br/*", "*://*.bipbop.com.br/*"]
    },
    "background": {
        "scripts": [
            "js/icheques-chrome-injector.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Analisar Cheques"
    },
    "homepage_url": "http://www.credithub.com.br/",
    "permissions": ["activeTab", "notifications", "tabs", "*://*/*"],
    "version_name": "Beta",
    "web_accessible_resources": [
        "js/icheques-chrome.js"
    ]
}
